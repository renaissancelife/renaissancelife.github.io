$(document).ready(function(){
	$("body").append('<div class="stt"><a href="javascript:;"><i class="m-n">&#xe652;</i></a></div>');
	$('body').on('click', ".stt", function (e){$("body , html").animate({scrollTop:0},500);});
	$(window).scroll(function(){
		var a=$(window).scrollTop();
		150<a?$(".stt").fadeIn():$(".stt").fadeOut();
	});				
});